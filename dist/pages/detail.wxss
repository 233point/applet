@import "./../components/screen.wxss";
@import "./../components/swiper.wxss";
.detail-cover {
  display: block;
  margin: 40rpx auto 0;
}
.detail-info,
.detail-desc {
  color: #aaa;
  font-size: 14px;
  line-height: 1;
  padding: 0.5em 0;
  overflow: hidden;
  text-align: center;
}
.detail-info,
.detail-text {
  text-align: left;
  line-height: 1.5;
}
.tag {
  display: inline-block;
  padding: 0 .6em;
  border-radius: 1em;
  margin-right: .5em;
  font-size: 60%;
  color: #9B9B9B;
  background: #F1F1F1;
}
.screen-wrapper {
  position: fixed;
  left: 0;
  right: 0;
}
.btn-flex-1 {
  padding: 0;
  width: 3.5em;
  line-height: 1.6;
  overflow: hidden;
}
.btn-flex-full {
  flex: 1 1 auto;
}
.btn-text-bottom {
  line-height: 1;
  color: #777;
}
