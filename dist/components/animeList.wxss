@import "./stars.wxss";
.weui-badge {
  background-color: #FF5577;
}
.animelist {
  margin-top: 10px;
  background-color: #fff;
}
.animelist-name {
  font-size: 32rpx;
  padding-left: 10px;
  border-left: 3px solid #FF5577;
}
.animelist-item {
  display: flex;
  align-items: center;
}
.animeList-item-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.animeList-item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.animeList-item-right {
  display: flex;
  align-items: center;
}
.animelist-item-image image {
  padding: 8px;
  height: 100px;
  width: 100px;
}
.animeList-item-time {
  font-size: 70%;
  color: #9B9B9B;
}
.animeList-item-description {
  color: #999;
  font-size: 90%;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
}
.anime-item-tags {
  background-color: #F1F1F1;
  color: #9B9B9B;
  margin-right: 0.2em;
  padding: 0 0.6em;
  border-radius: 1em;
  display: inline-block;
  font-size: 60%;
}
.animeList-item-flag {
  font-size: 80%;
}
